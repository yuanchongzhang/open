<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhangyu.myokhttpopensource">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".myokhttp.GApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />

        <activity android:name=".myokhttp.MyDemoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".myokhttp.activity.BannerActivity"/>
        <activity android:name=".myokhttp.activity.MainActivity_P2P"/>
        <activity android:name=".myokhttp.activity.MyToolBarActivity"/>
        <activity android:name=".myokhttp.activity.ScreenActivity"/>
        <activity android:name=".myokhttp.activity.MaterialDesignActivity"/>
        <activity android:name=".myokhttp.activity.TableLayoutActivity"/>
        <activity android:name=".myokhttp.activity.JsonCallBackActivity"/>
        <activity android:name=".myokhttp.activity.RecycleViewActivity"/>
        <activity android:name=".myokhttp.activity.ImitationWxActivity"
            android:theme="@style/MainTheme"
            >


        </activity>

        <activity android:name=".myokhttp.activity.ResultActivity"/>
        <activity android:name=".myokhttp.activity.NewMainActivity"/>
    </application>

</manifest>